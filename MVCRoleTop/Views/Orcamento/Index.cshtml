<main>

    <br>
    <br>
<section id="orcamento">

            <h2>Orçamento</h2>
            <form method="POST" action='@Url.Action("Registrar", "Orcamento")'>

                <div>
                    <label for="nome">Nome Completo</label>
                    <br />
                    <input id="nome" type="text" name="nome" />
                </div>

                <div>
                    <label for="email">E-mail</label>
                    <br />
                    <input id="email" type="email" name="email">
                </div>

                <div>
                    <label for="telefone">Telefone</label>
                    <br />
                    <input id="telefone" type="tel" name="telefone">
                </div>

                <div>
                    <label for="data">Data do Evento</label>
                    <br />
                    <input id="data" type="date" name="data_evento">
                </div>

                <div>
                    <label for="tipo">Tipo de Evento</label>
                    <br />
                    <input id="tipo" type="text" name="evento">
                </div>

                <div>
                    <label for="pessoas">Número de Pessoas</label>
                    <br />
                    <input id="pessoas" type="number" name="numero_pessoas">
                </div>

                <div>
                    <label for="conheceu">Como nos Conheceu?</label>
                    <br />
                    <input id="conheceu" type="text" name="como_conheceu">
                </div>

                <div>
                    <label for="observacoes">Observações</label>
                    <br />
                    <input id="observacoes" type="text" name="observacoes">
                </div>

                <div>
                    <input type="submit" value="Enviar">
                </div>
            </form>

        </section>
    </main>